@model WebMP3.Models.SubmitFolder

@using (Html.BeginForm("Start", "Home", FormMethod.Post))
{
    <div class="col-md-12">
    @Html.TextBoxFor(model => model.Dirrectory, "Dirrectory", new { style = "width: 80%;" })
        <br>
    @Html.CheckBoxFor(model => model.SubDir, "Use Sub-folders")
        <br>
    @Html.ValidationMessageFor(model => model.Dirrectory)
    <button type="submit">Show</button>
    </div>
    }
